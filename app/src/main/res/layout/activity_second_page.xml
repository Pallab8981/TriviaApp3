<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginLeft="160dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Who is the best cricketer in the world?"
            android:textSize="24sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="A) Sachin Tendulkar"
            android:textColor="#8C9EFF" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="B) Virat Kohli"
            android:textColor="#8C9EFF" />

        <Button
        android:id="@+id/bt3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="C) Adam Gilchirst"
        android:textColor="#8C9EFF" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="D) Jacques Kallis"
            android:textColor="#8C9EFF" />


        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:clickable="true"
            android:onClick="click"
            android:text="Next"
            android:textColor="#8C9EFF" />

    </LinearLayout>
</RelativeLayout>
